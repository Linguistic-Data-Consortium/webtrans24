- if @data_set.manifest.attached?
  = link_to "manifest", url_for(@data_set.manifest), target: "_blank"
- else
  no attached file
= form_for(@data_set, remote: true, html: { "data-type" => 'json' }) do |f|
  = f.file_field :manifest, direct_upload: true
  = f.submit "Submit", class: "justify-center rounded-md border border-transparent shadow-sm px-3 py-1 bg-gray-200 hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500", 'data-close-dialog': true
